using System;

class Program
{
    static void Main()
    {
        // یک پیام خوش‌آمد چاپ می‌کند
        Console.WriteLine("سلام! این اولین برنامه‌ی سی‌شارپ توست.");

        // گرفتن ورودی از کاربر
        Console.Write("اسمت رو وارد کن: ");
        string name = Console.ReadLine();

        // چاپ پیام شخصی
        Console.WriteLine("خوش اومدی، " + name + "!");
    }
}
